generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Persona {  
  id        Int      @id
  tipo_identificacion   String?   // tipo_identificacion  
  identificacion       String?   // identificacion  
  nombres              String?   // nombres  
  apellidos            String?   // apellidos  
  email                String?   // email  
  direccion            String?   // direccion  
  telefono            String?   // telefono  
  rh                   String?   // rh  
  tipo_persona          String?   // tipo_persona  
  recibe_visitas        String?   // recibe_visitas  
  nombreEps            String?   // nombre_eps  
  nombreArl            String?   // nombre_arl  
  acceso_restringido   String?   // acceso_restringido  
  observacion          String?   // observacion  
  consumoCasino       String?   // consumo_casino  
  tarjetaAcceso       String?   // tarjeta_acceso  
  codigoNomina         String?   // codigo_nomina  
  estado               String   
  idDependencia        Int?      // id_dependencia  
  idEmpresaSeguridadSocial Int? // id_empresa_seguridad_social  
  idGrupoHorario       Int?      // id_grupo_horario  
  idTurno              Int?      // id_turno  
  idDepartamento        Int?      // id_departamento  
  idArea               Int?      // id_area  
  idCiudad             Int?      // id_ciudad  
  idCentroCosto        Int?      // id_centro_costo  
  idCargo              Int?      // id_cargo  
  idEmpresaTrabaja     Int?      // id_empresa_trabaja  
  idGrupoConsumo       Int?      // id_grupo_consumo  
  cantidadConsumo      Int?      // cantidad_consumo  
  consumoHoteleria     String?   // consumo_hotelerias  
  fechaInicioValida    DateTime? // fecha_inicio_valida  
  fechaFinValida       DateTime? // fecha_fin_valida  
  genera_tiempo_adicional String? // genera_tiempo_adicional   
}  

model TurnoTiempo {  
  id                  Int     @id 
  codigo              String  // codigo  
  descripcion        String  // descripcion  
  tipoTurno          String  // tipo_turno  
  horaInicio         String  // hora_inicio  
  horaFin            String  // hora_fin  
  teorico            String 
  limiteTurno        String 
  proximoPeriodo     Boolean 
  aproximacionAntesEntrada Int
  aproximacionDespuesEntrada Int
  aproximacionAntesSalida Int 
  aproximacionDespuesSalida Int
  aprobarExtras      Boolean 
  generaExtrasEntrada Boolean 
  graciaAntesEntrada Int
  graciaDespuesEntrada Int 
  generaExtrasSalida  Boolean
  graciaAntesSalida  Int
  graciaDespuesSalida Int 
  horaInicioDiurno   String 
  horaInicioNocturno  String
  redondeoEntrada    String // redondeo_entrada  
  redondeoSalida     String // redondeo_salida  
  redondeoBreakEntrada String? // redondeo_break_entrada  
  redondeoBreakSalida String? // redondeo_break_salida  
  descuentaBreak     Boolean
  descuentaBreakMarcado Boolean 
  manejaEquivalenciaConceptos Boolean 
  estado             Boolean // estado  
}  

model Marcacion {  
  id               Int      @id  
  id_persona        Int?     // id_persona  
  fecha_marcacion   DateTime? // fecha_marcacion  
  estado_marcacion String?  // estado_marcacion  
  nombre_dispositivo String? // nombre_dispositivo  
  observacion      String? // observacion  
  observacionPersonal String? // observacion_personal  
  estado           Boolean 
  id_turno          Int?     // id_turno  
  pais            String?  // pais  
  ciudad          String?  // ciudad  
  direccion       String?  // direccion  
  Latitud         String?  // latitud  
  Longitud        String?  // longitud  
  Id_foto_remota    String?  // id_foto_remota  
}  

model Imagen {  
  id         Int      @id  
  id_persona Int?     // id_persona  
  id_vehiculo Int?    // id_vehiculo  
  tipo_imagen String? // tipo_imagen  
  numero_imagen Int?  // numero_imagen  
  imagen     String // imagen  
  estado     String? // estado  

}  

model Jornada {  
  id            Int      @id  
  id_persona    Int?     // id_persona  
  id_turno      Int?     // id_turno  
  fechaInicio DateTime? // fecha_inicio  
  horaInicioReal String? // hora_inicio_real  
  horaInicioCalculo String? // hora_inicio_calculo  
  fechaFin     DateTime? // fecha_fin  
  horaFinReal  String? // hora_fin_real  
  horaFinCalculo String? // hora_fin_calculo  
}  

model RegistroTiempo {  
  id           Int       @id 
  codigo       String? // codigo  
  fecha        DateTime?   // fecha  
  hora         String?   // hora  
  campo1       String? // campo1  
  campo2       String? // campo2  
  campo3       String? // campo3  
  campo4       String? // campo4  
  funcion      String? // funcion  
  dispositivo String? // dispositivo  
  pais        String? // pais  
  ciudad      String? // ciudad  
  direccion   String? // direccion  
  latitud     String? // latitud  
  longitud    String? // longitud  
  Id_foto_remota String? // id_foto_remota  
}  